<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.AdminController">

    <children>

        <VBox alignment="TOP_CENTER"
              maxWidth="1000"
              prefWidth="1000"
              maxHeight="520"
              prefHeight="520"
              spacing="15"
              style="
                  -fx-background-color: rgba(255,255,255,0.82);
                  -fx-background-radius: 35;
                  -fx-padding: 20 35 25 35;
              ">
            <effect>
                <DropShadow radius="30"
                            offsetY="6"
                            color="rgba(0,0,0,0.35)"/>
            </effect>

            <Label text="Admin İşlemleri"
                   style="-fx-font-size: 22; -fx-font-weight: bold;"/>

            <HBox spacing="30" alignment="TOP_CENTER">

                <VBox spacing="10"
                      prefWidth="460"
                      alignment="TOP_CENTER"
                      style="
                            -fx-background-color: rgba(255,255,255,0.90);
                            -fx-background-radius: 25;
                            -fx-padding: 15 20 20 20;
                      ">

                    <Label text="Kitap Ekle"
                           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

                    <TextField fx:id="txtTitle"
                               promptText="Kitap Adı"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtAuthor"
                               promptText="Yazar"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtPages"
                               promptText="Sayfa Sayısı"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtBarcode"
                               promptText="Barkod"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtStatus"
                               promptText="Durum (Mevcut / Mevcut Değil)"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtYear"
                               promptText="Yıl"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Kaydet"
                                onAction="#onSaveBookClick"
                                style="
                                    -fx-background-radius: 18;
                                    -fx-background-color: linear-gradient(to right, #6c5ce7, #a29bfe);
                                    -fx-text-fill: white;
                                    -fx-padding: 6 20;
                                "/>

                        <Button text="Temizle"
                                onAction="#onClearFormClick"
                                style="
                                    -fx-background-radius: 18;
                                    -fx-background-color: white;
                                    -fx-border-color: #6c5ce7;
                                    -fx-border-radius: 18;
                                    -fx-text-fill: #6c5ce7;
                                    -fx-padding: 6 20;
                                "/>
                    </HBox>

                    <Label fx:id="lblMessage" textFill="red"/>

                    <Separator/>

                    <Label text="Kitap Sil"
                           style="-fx-font-size: 14; -fx-font-weight: bold;"/>

                    <TextField fx:id="txtDeleteTitle"
                               promptText="Kitap Adı"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtDeleteBarcode"
                               promptText="Barkod"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <Button text="Sil"
                            onAction="#onDeleteBookClick"
                            style="
                                -fx-background-radius: 18;
                                -fx-background-color: linear-gradient(to right, #ff7675, #d63031);
                                -fx-text-fill: white;
                                -fx-padding: 6 20;
                            "/>
                    <Label fx:id="lblDeleteMessage" textFill="red"/>

                </VBox>

                <VBox spacing="14"
                      prefWidth="460"
                      alignment="TOP_CENTER"
                      style="
                          -fx-background-color: rgba(255,255,255,0.90);
                          -fx-background-radius: 25;
                          -fx-padding: 20 25 25 25;
                      ">

                    <Label text="Ödünç İşlemleri"
                           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

                    <Label text="Kitap Ödünç Ver"
                           style="-fx-font-size: 14; -fx-font-weight: bold;"/>

                    <TextField fx:id="txtLoanTc"
                               promptText="Kullanıcı TC"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtLoanBookTitle"
                               promptText="Kitap Adı"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtLoanBarcode"
                               promptText="Barkod"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <Button text="Ödünç Ver"
                            onAction="#onLoanBookClick"
                            style="
                                -fx-background-radius: 18;
                                -fx-background-color: linear-gradient(to right, #00b894, #55efc4);
                                -fx-text-fill: white;
                                -fx-padding: 6 20;
                            "/>

                    <Label fx:id="lblLoanMessage" textFill="red"/>

                    <Separator/>

                    <Label text="Kitap İade Al"
                           style="-fx-font-size: 14; -fx-font-weight: bold;"/>

                    <TextField fx:id="txtReturnTc"
                               promptText="Kullanıcı TC"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <TextField fx:id="txtReturnBarcode"
                               promptText="Barkod"
                               style="-fx-background-radius: 25; -fx-background-color: white; -fx-padding: 8 15;"/>

                    <Button text="İade Al"
                            onAction="#onReturnLoanClick"
                            style="
                                -fx-background-radius: 18;
                                -fx-background-color: linear-gradient(to right, #0984e3, #74b9ff);
                                -fx-text-fill: white;
                                -fx-padding: 6 20;
                            "/>

                    <Label fx:id="lblReturnMessage" textFill="red"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</StackPane>