<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.AdminController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <children>

        <Label text="Admin İşlemleri">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>

        <!-- Kitap ekleme kartı -->
        <VBox spacing="12"
              maxWidth="600"
              style="
                  -fx-background-color: rgba(255,255,255,0.95);
                  -fx-background-radius: 18;
                  -fx-padding: 20;
              ">
            <effect>
                <DropShadow radius="10" offsetY="4"
                            color="rgba(0,0,0,0.25)"/>
            </effect>

            <children>

                <Label text="Kitap Ekle"
                       style="-fx-font-size: 16; -fx-font-weight: bold;"/>

                <TextField fx:id="txtTitle"   promptText="Kitap Adı"/>
                <TextField fx:id="txtAuthor"  promptText="Yazar"/>
                <TextField fx:id="txtPages"   promptText="Sayfa Sayısı"/>
                <TextField fx:id="txtBarcode" promptText="Barkod"/>
                <TextField fx:id="txtStatus"  promptText="Durum (Mevcut / Mevcut Değil)"/>
                <TextField fx:id="txtYear"    promptText="Yıl"/>


                <HBox spacing="10">
                    <Button text="Kaydet"
                            onAction="#onSaveBookClick"
                            style="
                                -fx-background-radius: 18;
                                -fx-background-color:
                                    linear-gradient(to right, #6c5ce7, #a29bfe);
                                -fx-text-fill: white;
                                -fx-padding: 6 20;
                            "/>
                    <Button text="Temizle"
                            onAction="#onClearFormClick"
                            style="
                                -fx-background-radius: 18;
                                -fx-background-color: white;
                                -fx-border-radius: 18;
                                -fx-border-color: #6c5ce7;
                                -fx-text-fill: #6c5ce7;
                                -fx-padding: 6 20;
                            "/>
                </HBox>

                <Label fx:id="lblMessage"
                       textFill="red"/>

            </children>
        </VBox>

        <!-- İleride başka admin işlemleri için alan bırakıyoruz -->
        <!-- Örneğin kullanıcıları görüntüle, kitapları düzenle vs. -->

    </children>
</VBox>
