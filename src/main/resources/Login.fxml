<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.LoginController"
           prefHeight="550.0"
           prefWidth="700.0"
           style="
    -fx-background-image: url('/images/kutuphane.png');
    -fx-background-size: cover;
    -fx-background-position: center center;
">

    <children>
        <VBox alignment="CENTER" spacing="30">
            <children>

                <Label text="Giriş Yap">
                    <font>
                        <Font name="System Bold" size="20"/>
                    </font>
                </Label>

                <VBox spacing="15"
                      maxWidth="450"
                      style="
                          -fx-background-color: white;
                          -fx-background-radius: 25;
                          -fx-padding: 20 30 30 30;
                      ">
                    <effect>
                        <DropShadow radius="15" offsetY="4"/>
                    </effect>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Giriş tipi:"/>

                        <ToggleButton fx:id="btnUser"
                                      text="Kullanıcı"
                                      selected="true"
                                      onAction="#onUserRoleClick"
                                      style="
                      -fx-background-radius: 20;
                      -fx-padding: 6 20;
                      -fx-background-color: white;
                      -fx-border-color: #cccccc;
                      -fx-border-radius: 20;
                      -fx-text-fill: #444;
                  "/>

                        <ToggleButton fx:id="btnAdmin"
                                      text="Admin"
                                      onAction="#onAdminRoleClick"
                                      style="
                      -fx-background-radius: 20;
                      -fx-padding: 6 20;
                      -fx-background-color: white;
                      -fx-border-color: #cccccc;
                      -fx-border-radius: 20;
                      -fx-text-fill: #444;
                  "/>
                    </HBox>

                    <TextField fx:id="txtUsername"
                               promptText="Kullanıcı adı"
                               style="-fx-background-radius: 25;
                                      -fx-background-color: #ffffff;
                                      -fx-padding: 8 15 8 15;"/>

                    <PasswordField fx:id="txtPassword"
                                   promptText="Şifre"
                                   style="-fx-background-radius: 25;
                                          -fx-background-color: #ffffff;
                                          -fx-padding: 8 15 8 15;"/>
                    <Label fx:id="lblError"
                           textFill="red"
                           wrapText="true"
                           maxWidth="350"/>

                    <HBox spacing="30" alignment="CENTER">
                        <Button fx:id="btnCancel"
                                text="İptal"
                                onAction="#onCancelClick"
                                style="-fx-background-color: transparent;
                                       -fx-text-fill: #444;
                                       -fx-padding: 6 20 6 20;"/>

                        <Button fx:id="btnLogin"
                                text="Giriş"
                                onAction="#onLoginClick"
                                style="
                                    -fx-background-radius: 20;
                                    -fx-background-color:
                                        linear-gradient(to right, #7f5af0, #9d4edd);
                                    -fx-text-fill: white;
                                    -fx-padding: 6 30 6 30;
                                "/>
                    </HBox>

                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
