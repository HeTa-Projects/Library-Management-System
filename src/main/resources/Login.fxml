<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<StackPane
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.LoginController"
        prefHeight="550.0"
        prefWidth="700.0"
        style="
            -fx-background-image: url('/images/kutuphane.jpg');
            -fx-background-size: cover;
            -fx-background-position: center center;
        ">

    <children>

        <VBox alignment="CENTER"
              spacing="10"
              prefWidth="340" prefHeight="260"
              style="
                  -fx-background-color: rgba(255,255,255,0.60);
                  -fx-background-radius: 25;
                  -fx-padding: 20;
              ">
            <effect>
                <DropShadow color="#00000055" radius="25.0" spread="0.12"/>
            </effect>

            <children>
                <Label text="Giriş Yap"
                       style="-fx-font-size: 18; -fx-font-weight: bold;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>

                <TextField fx:id="txtUsername"
                           promptText="Kullanıcı adı"
                           prefWidth="220"
                           style="
                               -fx-background-color: rgba(255,255,255,0.85);
                               -fx-background-radius: 20;
                               -fx-border-color: transparent;
                               -fx-padding: 8 16;
                           "/>

                <PasswordField fx:id="txtPassword"
                               promptText="Şifre"
                               prefWidth="220"
                               style="
                                   -fx-background-color: rgba(255,255,255,0.85);
                                   -fx-background-radius: 20;
                                   -fx-border-color: transparent;
                                   -fx-padding: 8 16;
                               "/>

                <Label fx:id="lblError" textFill="red"/>

                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button text="İptal"
                                onAction="#onCancelClick"
                                prefWidth="80"
                                style="
                                    -fx-background-color: transparent;
                                    -fx-text-fill: #2d3436;
                                "/>
                        <Button text="Giriş"
                                onAction="#onLoginClick"
                                prefWidth="80"
                                style="
                                    -fx-background-color: linear-gradient(to right, #6c5ce7, #a29bfe);
                                    -fx-text-fill: white;
                                    -fx-background-radius: 20;
                                    -fx-cursor: hand;
                                "/>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
</StackPane>