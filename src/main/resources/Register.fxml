<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.RegisterController"
      alignment="CENTER"
      spacing="10"
      prefWidth="320" prefHeight="280">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Kayıt Ol"
               style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <TextField fx:id="txtUsername"
                   promptText="Kullanıcı adı"
                   prefWidth="220"/>

        <PasswordField fx:id="txtPassword"
                       promptText="Şifre"
                       prefWidth="220"/>

        <PasswordField fx:id="txtPasswordConfirm"
                       promptText="Şifre tekrar"
                       prefWidth="220"/>

        <Label fx:id="lblError" textFill="red"/>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button text="İptal" onAction="#onCancelClick" prefWidth="90"/>
                <Button text="Kaydol" onAction="#onRegisterClick" prefWidth="90"/>
            </children>
        </HBox>
    </children>

</VBox>
